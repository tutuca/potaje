{
  "name": "potaje",
  "version": "0.3.2",
  "description": "Un manojo de ideas",
  "repository": {
    "type": "git",
    "url": "http://github.com/tutuca/potaje"
  },
  "main": "assets/js/main.js",
  "directories": {
    "doc": "docs",
    "src": "assets"
  },
  "scripts": {
    "start": "npm run watch:js && npm run watch:css",
    "build": "npm run build:js && npm run build:css",
    "build:js": "webpack",
    "watch:js": "webpack --watch",
    "build:css": "node-sass-chokidar --include-path node_modules/bootstrap-sass/assets/stylesheets assets/sass/ -o static/css/",
    "watch:css": "node-sass-chokidar --include-path node_modules/bootstrap-sass/assets/stylesheets -w assets/sass/ -o static/css/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Matias Iturburu <matias.iturburu@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bootstrap-sass": "*",
    "jquery": "~2.1",
    "new-pjax": "",
    "node-sass-chokidar": "0.0.2",
    "slick-carousel": "*"
  },
  "devDependencies": {
    "grunt": "*",
    "node-sass": "*",
    "webpack": "*",
    "babel-loader": "*",
    "grunt-contrib-watch": "*",
    "grunt-sass": "*",
    "grunt-contrib-copy": "*",
    "grunt-webpack": "*",
    "grunt-contrib-concat": "*"
  }
}
